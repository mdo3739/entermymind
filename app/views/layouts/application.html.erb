<!DOCTYPE html>
<html>
<head>
  <title>Entermymind</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script></script>
</head>
<body>
  <div class='top-bar navbar-fixed-top'>
    <div class='container'>
      <div class='row top-bar-info'>
        <div class='col-md-8 col-xs-8 nav-links'>
          <ul class="nav nav-pills">
            <li><%= link_to "Home", static_index_path %></li>
            <li><%= link_to "Top Posts", posts_path %></li>
            <li><%= link_to "Users", users_path %></li>
          </ul>
        </div>
        <div class='col-md-4 col-xs-4'>
          <% if current_user %>
            <div class='pull-right user-info'>
              Hello <%= link_to current_user.username, user_path(current_user) %>! 
              <a href='users/edit'>
                <img class="icon icons8-Settings-Filled" src="data:image/png;base64," width="15" height="15" />
              </a>
              <%= link_to " ", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %>
            </div>
          <% else %>
            <div class='pull-right user-info'>
              <a type="button" data-toggle="modal" data-target=".log-in">Log In</a> or 
              <a type="button" data-toggle="modal" data-target=".sign-up">Sign Up</a>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class='container'>
    <div class='flash-container'>
      <% if flash[:notice] %>
      <div class='alert alert-success'>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
      <% elsif flash[:error] %>
        <div class='alert alert-danger'>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class='alert alert-warning'>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
    <br/><br/>
    <%= yield %>
  </div>
  <%= render partial: 'static/footer' %>
</body>
</html>